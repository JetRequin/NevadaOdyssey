<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreenTheme"
    tools:context=".SlotMachineActivity">

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="@string/money_slotmachine"
        android:textColor="@android:color/white"></TextView>


    <ImageView
        android:id="@+id/up"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/layout_bar"
        android:layout_alignBottom="@+id/layout_bar"
        android:layout_marginEnd="-10dp"
        android:layout_marginBottom="100dp"
        android:src="@drawable/up"></ImageView>

    <ImageView
        android:id="@+id/down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/layout_bar"
        android:layout_marginStart="-25dp"
        android:layout_marginBottom="40dp"
        android:layout_toEndOf="@+id/layout_bar"
        android:src="@drawable/down"
        android:visibility="gone"></ImageView>

    <FrameLayout
        android:id="@+id/layout_bar"
        android:background="@drawable/frame"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <fr.isen.nevadaodyssey.ImageViewSlotMachineScroller.ImageViewSlotMachineScroller
                android:id="@+id/image"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></fr.isen.nevadaodyssey.ImageViewSlotMachineScroller.ImageViewSlotMachineScroller>
            <fr.isen.nevadaodyssey.ImageViewSlotMachineScroller.ImageViewSlotMachineScroller
                android:id="@+id/image2"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               ></fr.isen.nevadaodyssey.ImageViewSlotMachineScroller.ImageViewSlotMachineScroller>
            <fr.isen.nevadaodyssey.ImageViewSlotMachineScroller.ImageViewSlotMachineScroller
                android:id="@+id/image3"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                ></fr.isen.nevadaodyssey.ImageViewSlotMachineScroller.ImageViewSlotMachineScroller>

        </LinearLayout>
    </FrameLayout>


</RelativeLayout>